@model IEnumerable<Salao.Domain.Models.Cliente.CliGrupo>

@{
    ViewBag.Title = "Grupos";
}

<h2>Grupos de usuários para clientes - @ViewBag.Fantasia</h2>

<p>
    @Html.ActionLink("Novo grupo", "Create", new { idEmpresa = (int)ViewBag.IdEmpresa })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlteradoEm)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlteradoEm)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Permissões", "Index", "CliGrupoPermissao", new { id=item.Id, idEmpresa = item.IdEmpresa }, null)
        </td>
    </tr>
}

</table>

<div class="form-group">
    @Html.ActionLink("Voltar", "Index", "Empresa", null, new { @class="btn btn-primary" })
</div>