                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContatarNovamente, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContatarNovamente)
                @Html.ValidationMessageFor(model => model.ContatarNovamente)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Comentários deste contato", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea cols="40" rows="5" required id="comentarios" name="comentarios"></textarea>
            </div>
        </div>

        <div class="form-group top20">
            <div class=" col-md-offset-2">
                <input type="submit" value="Gravar" class="btn btn-primary" />
                @Html.ActionLink("Voltar", "ContatarNovamente")
            </div>
        </div>
    </div>
