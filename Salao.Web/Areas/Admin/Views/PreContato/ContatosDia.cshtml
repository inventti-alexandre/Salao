@model IEnumerable<Salao.Domain.Models.Admin.PreContato>

@{
    ViewBag.Title = "Contatos no dia";
}

<h2>Contatos no dia</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        Período: 
        <input type="date" id="inicial" name="inicial" value="@ViewBag.Inicial" /> à <input type="date" id="final" value="@ViewBag.Final" name="final" />
        <input type="submit" value="Pesquisar" class="btn btn-primary" />
    </div>
}

<table class="table top20">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeSalao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContatoEm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atendido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assinou)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContatarNovamente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeSalao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContatoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atendido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AtendidoPor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assinou)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContatarNovamente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AtendidoPorUsuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Registrar contato", "Contato", new { id=item.Id })
        </td>
    </tr>
}

</table>
