@model IEnumerable<Salao.Domain.Models.Admin.PreContato>

@{
    ViewBag.Title = "Pré contatos rejeitados";
}

<h2>Pré contatos rejeitados</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p class="top20">
        Período:
        @Html.TextBox("inicial", ((DateTime)@ViewBag.Inicial).ToShortDateString(), new { type="date" })
        @Html.TextBox("final", ((DateTime)@ViewBag.Final).ToShortDateString(), new { type = "date" })
        <input type="submit" value="Pesquisar" class="btn btn-primary" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeSalao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContatoEm)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Atendido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Assinou)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContatarNovamente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeSalao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContatoEm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Atendido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Assinou)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContatarNovamente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id, returnUrl = Server.UrlEncode(Request.UrlReferrer.PathAndQuery) }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.Id, returnUrl = Server.UrlEncode(Request.UrlReferrer.PathAndQuery) }) |
            @Html.ActionLink("Registrar contato", "Contato", new { id = item.Id })

        </td>
    </tr>
}

</table>
