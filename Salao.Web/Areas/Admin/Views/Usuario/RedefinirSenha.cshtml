@model Salao.Domain.Models.Admin.Usuario

@{
    ViewBag.Title = "Redefinir Senha";
}

<h2>Redefinir Senha</h2>

 <div class="alert alert-block alert-warning top20">
    <h4>Atenção:</h4>
    A senha de <strong>@Model.Nome</strong> será redefinida. Um email será enviado com a nova senha.<br />Após redefinida o acesso só será permitido com a nova senha.
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.Id)
    @Html.ValidationSummary(true)

    <div class="form-actions no-color">
        <input type="submit" value="Redefinir" class="btn btn-danger" />
        @Html.ActionLink("Voltar", "Index")
    </div>
}