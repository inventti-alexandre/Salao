@model IEnumerable<Salao.Domain.Models.Cliente.CliUsuario>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Novo usuário", "Create", new { idEmpresa = @ViewBag.IdEmpresa } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Grupos", "Index", "CliUsuarioGrupo", new { id=item.Id, idEmpresa=item.IdEmpresa }, null) |
            @Html.ActionLink("Redefinir senha", "RedefinirSenha", new { id=item.Id })
        </td>
    </tr>
}

</table>

<div class="form-group">
    @Html.ActionLink("Voltar", "Index", "Empresa", new { Area = "Admin" }, new { @class = "btn btn-primary" })
</div>

