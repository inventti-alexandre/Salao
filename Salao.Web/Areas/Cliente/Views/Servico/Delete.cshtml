</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Area)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Area.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdSubArea)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubArea.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IdSalao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Salao.Fantasia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Detalhe)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Detalhe)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tempo)
