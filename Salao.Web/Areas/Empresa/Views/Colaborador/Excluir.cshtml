@model Salao.Domain.Models.Cliente.Profissional

@{
    ViewBag.Title = "Colaborador";
}

<h2>Colaborador - exclusão</h2>

<div class="alert alert-danger">
    <h3>Confirma a exclusão deste colaborador?</h3>
</div>
<div class="row top20 col-md-offset-1">
    @if (!string.IsNullOrEmpty(ViewBag.Image))
    {
        <img src="@ViewBag.Image" class="img-responsive img-thumbnail" style="height:120px; width:110px;" />
    }
</div>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ativo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AlteradoEm)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlteradoEm)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        
        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar", "Index", new { idSalao = Model.IdSalao })
        </div>
    }
</div>
