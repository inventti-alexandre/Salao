@model IEnumerable<Salao.Web.Areas.Empresa.Models.ProfissionalServicoModel>

@{
    ViewBag.Title = "Colaborador - Serviços";
}

<h3>@ViewBag.ProfissionalNome - Serviços prestados</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("IdProfissional", (int)ViewBag.IdProfissional)
    @Html.Hidden("IdSalao", (int)ViewBag.IdSalao)
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Selecionado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServicoNome)
                </td>
                <td>
                    <input type="checkbox" id="selecao" name="selecao" value="@item.IdServico" checked="@item.Selecionado" />
                </td>
            </tr>
        }

    </table>
    
    <div class="form-actions no-color">
        <input type="submit" value="Gravar" class="btn btn-primary" />
        @Html.ActionLink("Voltar", "Index", new { idSalao = (int)ViewBag.IdSalao })
    </div>
}
