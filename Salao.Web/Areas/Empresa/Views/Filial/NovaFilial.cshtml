<div>
    @Html.ActionLink("Voltar", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        exibirTipoPessoa();
    });

    function exibirTipoPessoa() {
        var tipo = $("#TipoPessoa").val();
        if (tipo == "1") {
            $("#tipo-fisica").show();
            $("#tipo-juridica").hide();
        }
        else {
            $("#tipo-fisica").hide();
            $("#tipo-juridica").show();
        }
    }

</script>